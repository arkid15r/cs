{
  "version": "0.1.0",
  "configurations": [
    {
      "name": "Run .ts",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node",
      "runtimeArgs": ["-r", "tsconfig-paths/register"],
      "args": ["${file}"],

      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**", "node_modules/**"]
    }
  ]
}
